<!doctype html>
<html lang="en">

<head>
	<%include header%>
	<title>Top lượt xem</title>
</head>

<body>
	<!-- ============================================================== -->
	<!-- main wrapper -->
	<!-- ============================================================== -->
	<div class="dashboard-main-wrapper">
		<!-- ============================================================== -->
		<!-- left sidebar -->
		<!-- ============================================================== -->
		<%include nav%>
		<!-- ============================================================== -->
		<!-- end left sidebar -->
		<!-- ============================================================== -->
		<!-- ============================================================== -->
		<!-- wrapper  -->
		<!-- ============================================================== -->
		<div class="dashboard-wrapper">
			<div class="dashboard-ecommerce">
				<div class="container-fluid dashboard-content ">
					<!-- ============================================================== -->
					<!-- pageheader  -->
					<!-- ============================================================== -->
					<div class="row">
						<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
							<div class="page-header">
								<h1	 class="pageheader-title">Bài đã hủy</h1	>
							</div>
						</div>
					</div>
					<!-- ============================================================== -->
					<!-- end pageheader  -->
					<!-- ============================================================== -->

					<% for (var i =0; i < posts.length;  i++ ) { %>
					<div class="row list-pending-post p-2">
						<div class="pending-post border p-2 w-100">
							<p>Lúc <b> <%= posts[i].created_at %> </b> </p>
							<div class="row">
								<div class="col-lg-3 post-img">
									<img src="<%= posts[i].images %>" width="100%">
								</div>
								<div class="col-lg-9">
									<h4 class="name">Tên sản phẩm: <%= posts[i].name %> </h4>
									<h4 class="name">Giá: <%= posts[i].price %> </h4>
									<h4 class="name">Tình trạng: <%= posts[i].status %> </h4>
									<h4 class="name">Loại sản phẩm: <%= posts[i].categoryId %> </h4>
									<h4 class="name">Địa điểm: <%= posts[i].location %> </h4>
									<h4 class="name">Người đăng: <%= posts[i].userId %> </h4>
									<p class="description">
										<%= posts[i].detail %>
									</p>
								</div>
							</div>
							<div class="row my-2">
								<div class="col-lg-3 text-left">
									<a class="btn btn-primary" href="#">Xem trước</a>
								</div>
								<div class="col-lg-9 text-right">
									<a href="/accept-post/<%= posts[i]._id %>" class="btn btn-primary mx-1" data-id="1">Chấp nhận</a>
									<a href="/reject-post/<%= posts[i]._id %>" class="btn btn-warning mx-1" data-id="2">Từ chối</a>
								</div>
							</div>
						</div>
					</div>
					<% } %>

					<div class="row px-3 text-center">
						<nav aria-label="Page navigation example">
							<ul class="pagination">
								<li class="page-item"><a class="page-link" href="#">Previous</a></li>
								<li class="page-item"><a class="page-link" href="#">1</a></li>
								<li class="page-item active"><a class="page-link " href="#">2</a></li>
								<li class="page-item"><a class="page-link" href="#">3</a></li>
								<li class="page-item"><a class="page-link" href="#">Next</a></li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
			<!-- ============================================================== -->
			<!-- footer -->
			<!-- ============================================================== -->
			<div class="footer">
				<div class="container-fluid">
					<div class="row">
						<div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12">
							Copyright © 2018 Concept. Mọi bản quyền được bảo hộ. Template phát triển bởi <a href="https://colorlib.com/wp/">Colorlib</a>.
						</div>
						<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
							<div class="text-md-right footer-links d-none d-sm-block">
								<a href="javascript: void(0);">Về chúng tôi</a>
								<a href="javascript: void(0);">Hỗ trợ</a>
								<a href="javascript: void(0);">Liên hệ</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- ============================================================== -->
			<!-- end footer -->
			<!-- ============================================================== -->
		</div>
		<!-- ============================================================== -->
		<!-- end wrapper  -->
		<!-- ============================================================== -->
	</div>
	<!-- ============================================================== -->
	<!-- end main wrapper  -->
	<!-- ============================================================== -->
	<!-- Optional JavaScript -->
	<!-- jquery 3.3.1 -->
	<script src="../vendor/jquery/jquery-3.3.1.min.js"></script>
	<!-- bootstap bundle js -->
	<script src="../vendor/bootstrap/js/bootstrap.bundle.js"></script>
	<!-- slimscroll js -->
	<script src="../vendor/slimscroll/jquery.slimscroll.js"></script>
	<!-- main js -->
	<script src="../javascripts/main-js.js"></script>

	<script src="../vendor/multi-select/js/jquery.multi-select.js"></script>

</body>

</html>